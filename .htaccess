RewriteEngine On
RewriteBase /

# product-details/slug/id  ->  product-details.php?slug=...&i=...
RewriteRule ^product-details/([^/]+)/([0-9]+)/?$ product-details.php?slug=$1&i=$2 [L,QSA]

# /sayfa  ->  /sayfa.php  (php uzantısını gizle)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/?$ $1.php [L,QSA]
